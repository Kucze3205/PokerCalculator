<Application x:Class="PokerCalculatorWPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PokerCalculatorWPF"
             xmlns:cv="clr-namespace:PokerCalculatorWPF.Converters"
             StartupUri="View/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <cv:ImagePathConverter x:Key="ImagePathConverter"/>
            <cv:WidthToFontSizeConverter x:Key="WidthToFontSizeConverter"/>
            <cv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
